{
  "compilerOptions": {
    "preserveSymlinks": true,
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
